<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Student ID & Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Student Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:background="@drawable/status_badge_pending"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Application Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSemester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Semester: 5"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"/>

                <TextView
                    android:id="@+id/tvCgpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="CGPA: 3.5"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"/>

                <TextView
                    android:id="@+id/tvStudentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID: ST001"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"/>
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRoomInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room: 101-A"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"/>

                <TextView
                    android:id="@+id/tvSubmissionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Date: 12/12/2024"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Contact Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="?attr/colorSurface"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvParentContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent: +92 300 1234567"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/tvEmergencyContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Emergency: +92 300 7654321"
                android:textSize="13sp"
                android:textColor="?android:attr/textColorSecondary"/>
        </LinearLayout>

        <!-- Action Buttons (Only for PENDING status) -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/btnReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:textColor="#fff"
                android:backgroundTint="#EF5350"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:textColor="@android:color/white"
                android:backgroundTint="?attr/colorPrimary"/>
        </LinearLayout>

        <!-- Rejection Reason (Only visible when REJECTED) -->
        <TextView
            android:id="@+id/tvRejectionReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reason: CGPA not sufficient"
            android:textSize="13sp"
            android:textColor="#EF5350"
            android:textStyle="italic"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>